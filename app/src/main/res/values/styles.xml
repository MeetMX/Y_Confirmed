<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:inputType"> textNoSuggestions</item>
    </style>

    <style name="AppTheme.TextView.YeezyMain">
        <item name="android:textColor">@color/Main</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/yeezy_tstar_bold</item>
    </style>

    <style name="AppTheme.TextView.YeezyDate">
        <item name="android:textColor">@color/Main</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/adi_haus_din_medium</item>
    </style>


</resources>
